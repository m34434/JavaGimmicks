<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>net.sf.javagimmicks</groupId>
	<artifactId>GimmickUtils</artifactId>
	<version>0.74-SNAPSHOT</version>

	<packaging>jar</packaging>

	<name>JavaGimmicks - GimmickUtils</name>
	<description>Utility classes, APIs and tools for Java</description>
	<url>https://sourceforge.net/projects/jgutils/</url>

	<properties>
		<maven.compiler.source>1.6</maven.compiler.source>
		<maven.compiler.target>1.6</maven.compiler.target>
	</properties>

	<parent>
		<groupId>org.sonatype.oss</groupId>
		<artifactId>oss-parent</artifactId>
		<version>7</version>
	</parent>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>dom4j</groupId>
				<artifactId>dom4j</artifactId>
				<version>1.6.1</version>
				<optional>true</optional>
			</dependency>
			<dependency>
				<groupId>org.easymock</groupId>
				<artifactId>easymock</artifactId>
				<version>3.1</version>
				<scope>test</scope>
			</dependency>
			<dependency>
				<groupId>junit</groupId>
				<artifactId>junit</artifactId>
				<version>4.11</version>
				<optional>true</optional>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<dependencies>
		<dependency>
			<groupId>dom4j</groupId>
			<artifactId>dom4j</artifactId>
		</dependency>
		<dependency>
			<groupId>org.easymock</groupId>
			<artifactId>easymock</artifactId>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<version>2.2.1</version>
				<executions>
					<execution>
						<id>attach-sources</id>
						<phase>verify</phase>
						<goals>
							<goal>jar-no-fork</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.9</version>
				<configuration>
					<quiet>true</quiet>
					<show>public</show>
					<excludePackageNames>net.sf.javagimmicks.collections.bidimap</excludePackageNames>
					<groups>
						<group>
							<title>Basic utilities (for everyone)</title>
							<packages>net.sf.javagimmicks.beans*:net.sf.javagimmicks.io:net.sf.javagimmicks.lang*:net.sf.javagimmicks.util*</packages>
						</group>
						<group>
							<title>Utilities for multi-threaded programming</title>
							<packages>net.sf.javagimmicks.concurrent*</packages>
						</group>
						<group>
							<title>Basic utilities for and around the Java Collection API</title>
							<packages>net.sf.javagimmicks.collections:net.sf.javagimmicks.collections.builder*:net.sf.javagimmicks.collections.composite*:net.sf.javagimmicks.collections.decorators*:net.sf.javagimmicks.collections.filter*</packages>
						</group>
						<group>
							<title>Observer pattern (events) for the Java Collection API</title>
							<packages>net.sf.javagimmicks.collections.event*</packages>
						</group>
						<group>
							<title>Implementations for dealing with n:m relationship data structures</title>
							<packages>net.sf.javagimmicks.collections.mapping*</packages>
						</group>
						<group>
							<title>Provides a "transforming decorator" API for the Java Collection API</title>
							<packages>net.sf.javagimmicks.collections.transformer*</packages>
						</group>
						<group>
							<title>A diff engine for finding differences between data structures or file system folders</title>
							<packages>net.sf.javagimmicks.collections.diff*:net.sf.javagimmicks.io.folderdiff*</packages>
						</group>
						<group>
							<title>Yet another (small) graph API</title>
							<packages>net.sf.javagimmicks.graph*</packages>
						</group>
						<group>
							<title>A few mathematical utilities</title>
							<packages>net.sf.javagimmicks.math*</packages>
						</group>
						<group>
							<title>Swing utilities and extensions</title>
							<packages>net.sf.javagimmicks.swing*</packages>
						</group>
					</groups>
				</configuration>
				<executions>
					<execution>
						<id>attach-javadocs</id>
						<phase>verify</phase>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>
			<id>release-sign-artifacts</id>
			<activation>
				<property>
					<name>performRelease</name>
					<value>true</value>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-gpg-plugin</artifactId>
						<version>1.4</version>
						<executions>
							<execution>
								<id>sign-artifacts</id>
								<phase>verify</phase>
								<goals>
									<goal>sign</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

	<licenses>
